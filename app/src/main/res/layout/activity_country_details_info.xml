<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/app_background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_background">

        <!-- Country Summary Section -->
        <TextView
            android:id="@+id/textView_country_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/info_background"
            android:fontFamily="@font/open_sans"
            android:padding="12dp"
            android:gravity="center"
            android:text="Country Summary"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_country_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Best Time to Visit Section -->
        <TextView
            android:id="@+id/textView_best_time_to_visit_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Best Time to Visit"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <GridLayout
            android:id="@+id/best_time_to_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="12"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <!-- Placeholder months for Best Time to Visit -->
            <TextView android:id="@+id/jan" android:text="Jan" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/feb" android:text="Feb" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/mar" android:text="Mar" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/apr" android:text="Apr" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/may" android:text="May" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/jun" android:text="Jun" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/jul" android:text="Jul" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/aug" android:text="Aug" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/sep" android:text="Sep" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/oct" android:text="Oct" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/nov" android:text="Nov" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>
            <TextView android:id="@+id/dec" android:text="Dec" android:background="android:background=@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1"/>

        </GridLayout>

        <!-- Weather Section -->
        <TextView
            android:id="@+id/textView_weather_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:gravity="center"
            android:text="Weather"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_weather_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Interesting Fact Section -->
        <TextView
            android:id="@+id/textView_fact_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:text="Interesting Fact"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_fact_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Official Tourism Website Link -->
        <TextView
            android:id="@+id/textView_website_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:text="Official Tourism Website"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_website_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:autoLink="web" />
    </LinearLayout>
</ScrollView>