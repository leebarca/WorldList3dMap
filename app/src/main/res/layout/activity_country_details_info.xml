<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/app_background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_background">

        <!-- Country Info Text -->
        <TextView
            android:id="@+id/textView_country_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/info_background"
            android:fontFamily="@font/open_sans"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <GridLayout
            android:id="@+id/best_time_to_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="12"
            android:layout_marginTop="8dp">

            <!-- Month Cells for January to December -->
            <TextView
                android:id="@+id/jan"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Jan"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/feb"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Feb"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/mar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Mar"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/apr"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Apr"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/may"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="May"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/jun"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Jun"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/jul"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Jul"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/aug"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Aug"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/sep"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Sep"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/oct"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Oct"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/nov"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Nov"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

            <TextView
                android:id="@+id/dec"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Dec"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background" />

        </GridLayout>

        <!-- Color Legend Key placed below the month bar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal">

            <!-- Best Time Indicator -->
            <TextView
                android:id="@+id/best_time_key"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Best"
                android:fontFamily="@font/open_sans"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background"
                android:padding="4dp"
                android:layout_margin="4dp"/>

            <!-- Average Time Indicator -->
            <TextView
                android:id="@+id/avg_time_key"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Average"
                android:fontFamily="@font/open_sans"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background"
                android:padding="4dp"
                android:layout_margin="4dp"/>

            <!-- Worst Time Indicator -->
            <TextView
                android:id="@+id/worst_time_key"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Worst"
                android:fontFamily="@font/open_sans"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background"
                android:padding="4dp"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>