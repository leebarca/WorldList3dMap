<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/app_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal">

        <!-- Country Image -->
        <ImageView
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Country 3D Image"
            android:scaleType="centerCrop" />

        <!-- Country Name -->
        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center" />

        <!-- Country Flag -->
        <ImageView
            android:id="@+id/country_flag"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Country Flag"
            android:layout_gravity="center_horizontal" />

        <!-- Details Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="16dp">

            <!-- Capital -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Capital Icon"
                    android:src="@drawable/capital" />
                <TextView
                    android:id="@+id/textView_capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Population -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Population Icon"
                    android:src="@drawable/population" />
                <TextView
                    android:id="@+id/textView_population"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Languages -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Language Icon"
                    android:src="@drawable/languages" />
                <TextView
                    android:id="@+id/textView_languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Religion -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Religion Icon"
                    android:src="@drawable/religion" />
                <TextView
                    android:id="@+id/textView_religion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Continent -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Continent Icon"
                    android:src="@drawable/continent" />
                <TextView
                    android:id="@+id/textView_continent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Area -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Area Icon"
                    android:src="@drawable/area" />
                <TextView
                    android:id="@+id/textView_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

        </GridLayout>

        <!-- Additional content (e.g., country info, attractions) -->
        <TextView
            android:id="@+id/textView_country_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/info_background"
            android:fontFamily="@font/open_sans"
            android:padding="12dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Top Attractions Header -->
        <TextView
            android:id="@+id/top_attractions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans"
            android:text="Top 3 attractions:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Container for the expandable attractions -->
        <LinearLayout
            android:id="@+id/attractions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
