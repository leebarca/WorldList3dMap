<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/chip_selected" /> <!-- Background color for selected state -->
            <stroke android:width="2dp" android:color="@color/chip_selected" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background for default state -->
            <stroke android:width="2dp" android:color="@color/button_border_colour" /> <!-- Border color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
