<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/app_background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:orientation="vertical">

        <!-- Country Summary Section -->
        <TextView
            android:id="@+id/textView_country_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/info_background"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/planning_your_trip"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <!-- Clickable Info Icon -->
            <LinearLayout
                android:id="@+id/flights_element"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:background="@drawable/button_background"
                android:backgroundTintMode="src_over"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/flights_icon"
                    android:src="@drawable/flight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flights"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Clickable Info Icon -->
            <LinearLayout
                android:id="@+id/hotels_element"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:background="@drawable/button_background"
                android:backgroundTintMode="src_over"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/hotels_icon"
                    android:src="@drawable/hotel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hotels"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Clickable Attractions Icon -->
            <LinearLayout
                android:id="@+id/packages_element"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:background="@drawable/button_background"
                android:backgroundTintMode="src_over"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/packages_icon"
                    android:src="@drawable/packages" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/packages"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Clickable Offers Icon -->
            <LinearLayout
                android:id="@+id/activities_element"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:background="@drawable/button_background"
                android:backgroundTintMode="src_over"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/activities_icon"
                    android:src="@drawable/activities" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activities"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>
        <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp">
         </FrameLayout>
        </LinearLayout>
</ScrollView>
