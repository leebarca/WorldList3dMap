<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/app_background_color</item>
        <item name="colorPrimaryDark">@color/app_background_color</item>
        <item name="colorAccent">@color/app_background_color</item>
    </style>

    <!-- NoActionBar Theme for specific activity -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
