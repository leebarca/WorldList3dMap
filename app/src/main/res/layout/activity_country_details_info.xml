<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/app_background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_background">

        <!-- Country Summary Section -->
        <TextView
            android:id="@+id/textView_country_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/info_background"
            android:fontFamily="@font/open_sans"
            android:padding="12dp"
            android:gravity="center"
            android:text="Country Summary"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_country_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Best Time to Visit Section -->
        <TextView
            android:id="@+id/textView_best_time_to_visit_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Best Time to Visit"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <GridLayout
            android:id="@+id/best_time_to_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="12"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <!-- Placeholder months for Best Time to Visit -->
            <TextView android:id="@+id/jan" android:text="Jan" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/feb" android:text="Feb" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/mar" android:text="Mar" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/apr" android:text="Apr" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/may" android:text="May" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/jun" android:text="Jun" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/jul" android:text="Jul" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/aug" android:text="Aug" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/sep" android:text="Sep" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/oct" android:text="Oct" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/nov" android:text="Nov" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>
            <TextView android:id="@+id/dec" android:text="Dec" android:background="@drawable/rounded_background" android:gravity="center" android:textColor="@android:color/white" android:layout_columnWeight="1" android:textSize="14sp"/>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Weather Section -->
        <TextView
            android:id="@+id/textView_weather_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:gravity="center"
            android:text="Weather"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <GridLayout
            android:id="@+id/weather_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="1"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_margin="16dp">

            <!-- Spring Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_spring"
                    android:contentDescription="Spring Icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/spring_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spring (March - May)"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/spring_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Repeat similar blocks for Summer, Autumn, and Winter -->

            <!-- Summer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_summer"
                    android:contentDescription="Summer Icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/summer_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summer (June - August)"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/summer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Autumn Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_autumn"
                    android:contentDescription="Autumn Icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/autumn_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autumn (September - November)"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/autumn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Winter Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_winter"
                    android:contentDescription="Winter Icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/winter_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winter (December - February)"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/winter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/open_sans"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Interesting Fact Section -->
        <TextView
            android:id="@+id/textView_fact_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="Interesting Fact"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_fact_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Official Tourism Website Link -->
        <TextView
            android:id="@+id/textView_website_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="Official Tourism Website"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_website_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:autoLink="web" />
    </LinearLayout>
</ScrollView>