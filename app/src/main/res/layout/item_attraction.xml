<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/app_background_color">

    <!-- Top Swipe Hint Icon -->
    <ImageView
        android:id="@+id/swipe_hint_top"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/arrow_up"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Swipe down hint" />

    <!-- Content Container with Border -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/button_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    <!-- Attraction name -->
    <TextView
        android:id="@+id/attraction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attraction Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"/>

    <!-- Attraction image -->
    <ImageView
        android:id="@+id/attraction_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:contentDescription="Attraction Image"/>

    <!-- Attraction details -->
    <TextView
        android:id="@+id/attraction_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attraction details go here."
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@android:color/black"/>

    </LinearLayout>

    <!-- Bottom Swipe Hint Icon -->
    <ImageView
    android:id="@+id/swipe_hint_bottom"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:src="@drawable/arrow_down"
    android:layout_gravity="center_horizontal"
    android:contentDescription="Swipe up hint" />

</LinearLayout>