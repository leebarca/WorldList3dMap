<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:fillViewport="true"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:orientation="vertical">

        <!-- Country Summary Section -->
        <TextView
            android:id="@+id/textView_country_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/info_background"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Country Summary"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_country_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:maxLines="4"
            android:padding="4dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/summary_expand_layout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/black"
            android:textSize="16sp">

            <TextView
                android:id="@+id/button_expand_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Read More"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Best Time to Visit Section -->
        <TextView
            android:id="@+id/textView_best_time_to_visit_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Best Time to Visit"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:background="@drawable/calendar">
                </ImageView>

                <GridLayout
                    android:id="@+id/best_time_to_visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:columnCount="4"
                    android:padding="4dp"
                    android:rowCount="3">

                    <!-- Placeholder months for Best Time to Visit -->
                    <TextView
                        android:id="@+id/jan"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Jan"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/feb"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Feb"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/mar"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Mar"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/apr"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Apr"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/may"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="May"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/jun"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Jun"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/jul"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Jul"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/aug"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Aug"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/sep"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Sep"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/oct"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Oct"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/nov"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Nov"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/dec"
                        android:layout_columnWeight="1"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:text="Dec"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_margin="4dp" />

                </GridLayout>
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView_safety_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Safety and Security"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Safety and Security Section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/safety_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Safety Icon" />

            <TextView
                android:id="@+id/safety_and_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray" />

        <!-- Weather Section -->
        <TextView
            android:id="@+id/textView_weather_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Weather"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/weather_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="1"
            android:padding="4dp">

            <!-- Spring Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Spring Icon"
                    android:src="@drawable/icon_spring" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/spring_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Spring (March - May)"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/spring_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Summer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Summer Icon"
                    android:src="@drawable/icon_summer" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/summer_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Summer (June - August)"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/summer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Autumn Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Autumn Icon"
                    android:src="@drawable/icon_autumn" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/autumn_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Autumn (September - November)"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/autumn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Winter Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Winter Icon"
                    android:src="@drawable/icon_winter" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/winter_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="Winter (December - February)"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/winter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray" />

        <!-- Cuisine Section -->
        <TextView
            android:id="@+id/textView_cuisine_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Cuisine"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/cuisine_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:columnCount="1"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:contentDescription="Winter Icon"
                    android:src="@drawable/food" />

                <TextView
                    android:id="@+id/food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Popular Food"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/food_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="Winter Icon"
                    android:src="@drawable/drink" />

                <TextView
                    android:id="@+id/drink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Popular Drink"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/drink_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray" />

        <!-- Currency Section -->
        <TextView
            android:id="@+id/textView_currency_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Currency"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Currency Icon"
                android:src="@drawable/currency" />

            <TextView
                android:id="@+id/textView_currency_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray" />

        <!-- Interesting Fact Section -->
        <TextView
            android:id="@+id/textView_fact_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Interesting Fact"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Interesting Fact Icon"
                android:src="@drawable/info" />

            <TextView
                android:id="@+id/textView_fact_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray" />

        <!-- Official Tourism Website Link -->

        <TextView
            android:id="@+id/textView_website_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:padding="4dp"
            android:text="Official Tourism Website"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Website Icon"
                android:src="@drawable/website" />

            <TextView
                android:id="@+id/textView_website_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>