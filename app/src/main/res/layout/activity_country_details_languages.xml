<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_background"
        android:src="@drawable/return_button"
        android:contentDescription="@string/country_details"
        android:scaleType="centerInside"
        android:clickable="true"
        android:focusable="true" />

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_button"
        android:padding="8dp"
        android:background="@color/app_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:paddingBottom="16dp"
            android:gravity="center_horizontal">

            <!-- Country Summary Section -->
            <TextView
                android:id="@+id/textView_phrases_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/info_background"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="4dp"
                android:text="Useful Phrases"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Spinner for selecting categories -->
            <FrameLayout
                android:id="@+id/spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <Spinner
                    android:id="@+id/language_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrowdown"
                    android:layout_gravity="end|center_vertical"
                    android:contentDescription="@string/arrow_down" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/summary_expand_layout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="4dp"
                android:orientation="vertical"
                android:textColor="@android:color/black"
                android:textSize="16sp">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hello"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans" />

                <TextView
                    android:id="@+id/hello_translation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans" />

                <TextView
                    android:id="@+id/goodbye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Goodbye"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans" />

                <TextView
                    android:id="@+id/goodbye_translation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>