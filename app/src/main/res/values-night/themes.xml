<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldList3dApp" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/list_background_colour</item>
        <item name="colorPrimaryVariant">@color/list_background_colour</item>
        <item name="colorOnPrimary">@color/list_background_colour</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/list_background_colour</item>
        <item name="colorSecondaryVariant">@color/list_background_colour</item>
        <item name="colorOnSecondary">@color/list_background_colour</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/list_background_colour</item>
        <item name="android:windowBackground">@color/list_background_colour</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.WorldList3dApp.Launch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the background color to list_background_colour or use a drawable with the logo -->
        <item name="android:windowBackground">@drawable/launch_screen_background</item>
    </style>
</resources>