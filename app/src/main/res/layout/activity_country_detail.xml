<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/app_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background_color"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal">

        <!-- Country Image -->
        <ImageView
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Country 3D Image"
            android:scaleType="centerCrop" />

        <!-- Country Name -->
        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center" />

        <!-- Country Flag -->
        <ImageView
            android:id="@+id/country_flag"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Country Flag"
            android:layout_gravity="center_horizontal" />

        <!-- Details Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="16dp">

            <!-- Capital -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Capital Icon"
                    android:src="@drawable/capital" />
                <TextView
                    android:id="@+id/textView_capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Population -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Population Icon"
                    android:src="@drawable/population" />
                <TextView
                    android:id="@+id/textView_population"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Languages -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Language Icon"
                    android:src="@drawable/languages" />
                <TextView
                    android:id="@+id/textView_languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Religion -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Religion Icon"
                    android:src="@drawable/religion" />
                <TextView
                    android:id="@+id/textView_religion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Continent -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Continent Icon"
                    android:src="@drawable/continent" />
                <TextView
                    android:id="@+id/textView_continent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Area -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Area Icon"
                    android:src="@drawable/area" />
                <TextView
                    android:id="@+id/textView_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>

        <GridLayout
            android:id="@+id/best_time_to_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="12"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <!-- Month Cells for January to December -->
            <TextView
                android:id="@+id/jan"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Jan"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/feb"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Feb"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/mar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Mar"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/apr"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Apr"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/may"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="May"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/jun"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Jun"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/jul"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Jul"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/aug"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Aug"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/sep"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Sep"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/oct"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Oct"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/nov"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Nov"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <TextView
                android:id="@+id/dec"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Dec"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/button_border_colour" />

            <!-- Repeat the TextView for each month up to December -->
            <!-- Use IDs as feb, mar, apr, etc. for each month -->
        </GridLayout>
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="16dp">

        <!-- Clickable Info Icon -->
        <LinearLayout
            android:id="@+id/open_info_element"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:background="@drawable/button_background"
            android:backgroundTintMode="src_over"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Info Icon"
                android:src="@drawable/info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Clickable Attractions Icon -->
        <LinearLayout
            android:id="@+id/open_attractions_element"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:background="@drawable/button_background"
            android:backgroundTintMode="src_over"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Attractions Icon"
                android:src="@drawable/attractions" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attractions"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Clickable Offers Icon -->
        <LinearLayout
            android:id="@+id/open_offers_element"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:background="@drawable/button_background"
            android:backgroundTintMode="src_over"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Offers Icon"
                android:src="@drawable/offers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
