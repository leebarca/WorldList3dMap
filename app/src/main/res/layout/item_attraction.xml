<!-- res/layout/item_attraction.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <!-- Row with name and arrow icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Attraction name -->
        <!-- Dropdown arrow icon -->
        <TextView
            android:id="@+id/attraction_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="8dp"
            android:text="ghgh"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="64dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_name" /> <!-- Use a down arrow drawable here -->
    </RelativeLayout>

    <!-- Hidden details section that expands -->
    <TextView
        android:id="@+id/attraction_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attraction details go here."
        android:padding="8dp"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

</LinearLayout>
