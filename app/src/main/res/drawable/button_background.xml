<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer (optional) -->
    <item android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main Button Background -->
    <item>
        <shape>
            <!-- Set the main background color here -->
            <solid android:color="@color/list_background_colour" />

            <!-- Rounded corners for the button -->
            <corners android:radius="12dp" />

            <!-- Optional padding for the content -->
            <padding android:left="10dp" android:right="10dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>

</layer-list>